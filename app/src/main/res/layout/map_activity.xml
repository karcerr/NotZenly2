<?xml version="1.0" encoding="utf-8"?>
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
    >

        <org.osmdroid.views.MapView
            android:id="@+id/map"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            tools:layout_editor_absoluteY="-63dp"
            tools:layout_editor_absoluteX="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
            android:id="@+id/copyright_OSV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/openstreetview"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="2dp"
            android:textStyle="italic"
            android:textColorLink="@color/teal"
            android:textColor="@color/teal"
    />
    <!-- Bottom Buttons overlay -->
    <LinearLayout
            android:id="@+id/topButtonsOverlay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">
        <FrameLayout
                android:id="@+id/create_geo_story_frame"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/map_button_2"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="16dp"
                android:clickable="true"
        >
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/geo_story_icon"
                    android:contentDescription="@string/add_geo_story"
                    android:background="@null"
                    android:scaleType="fitCenter"
                    android:layout_gravity="center"
                    android:padding="8dp"
            />
        </FrameLayout>
        <Space
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
        />
        <FrameLayout
                android:id="@+id/search_frame"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/map_button_1"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="16dp"
                android:clickable="true"
        >
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/search"
                    android:contentDescription="@string/search"
                    android:background="@null"
                    android:scaleType="fitCenter"
                    android:layout_gravity="center"
                    android:padding="14dp"
            />
        </FrameLayout>

    </LinearLayout>
    <!-- 2 Popping up menus  -->
    <LinearLayout
            android:id="@+id/overlay_on_clicked_menus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_margin="20dp"
    >
        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/overlapped_icons_recyclerview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/geo_story_gradient"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:clipToOutline="true"
        />

        <LinearLayout
                android:id="@+id/friend_clicked_overlay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="@drawable/geo_story_gradient"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginVertical="10dp"
                android:baselineAligned="false"
                android:paddingVertical="12dp"
        >
            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="start"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent">
                <TextView
                        android:id="@+id/nickname_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/nickname"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:autoSizeTextType="uniform"
                        android:maxLines="1"
                        android:textAppearance="?android:textAppearanceMedium"
                        android:fontFamily="@font/my_font"
                        android:textSize="35sp"
                        android:gravity="center_vertical"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginBottom="2dp"
                />
                <LinearLayout
                        android:id="@+id/distance_and_speed_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent">
                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/distance_icon"
                            android:importantForAccessibility="no"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="4dp"
                    />
                    <TextView
                            android:id="@+id/distance_text"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:autoSizeTextType="uniform"
                            android:maxLines="1"
                            android:textAppearance="?android:textAppearanceMedium"
                            android:fontFamily="@font/my_font"
                            android:textSize="15sp"
                            android:layout_gravity="center"
                    />
                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/speed_icon"
                            android:importantForAccessibility="no"
                            android:layout_marginEnd="4dp"
                    />
                    <TextView
                            android:id="@+id/speed_text"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:autoSizeTextType="uniform"
                            android:maxLines="1"
                            android:textAppearance="?android:textAppearanceMedium"
                            android:fontFamily="@font/my_font"
                            android:textSize="15sp"
                            android:layout_gravity="center"
                    />
                </LinearLayout>
                <LinearLayout
                        android:id="@+id/views_and_time_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:visibility="gone"
                        android:layout_marginEnd="5dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent">
                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/eye"
                            android:importantForAccessibility="no"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="4dp"
                    />
                    <TextView
                            android:id="@+id/views_text"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:autoSizeTextType="uniform"
                            android:maxLines="1"
                            android:textAppearance="?android:textAppearanceMedium"
                            android:fontFamily="@font/my_font"
                            android:textSize="15sp"
                            android:layout_gravity="center"
                    />
                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/clock"
                            android:importantForAccessibility="no"
                            android:layout_marginEnd="4dp"
                    />
                    <TextView
                            android:id="@+id/time_text"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.5"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:autoSizeTextType="uniform"
                            android:maxLines="1"
                            android:textAppearance="?android:textAppearanceMedium"
                            android:fontFamily="@font/my_font"
                            android:textSize="15sp"
                            android:layout_gravity="center"
                    />
                </LinearLayout>

            </LinearLayout>
            <FrameLayout
                    android:id="@+id/friend_profile_frame"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/map_button_2"
                    android:layout_marginHorizontal="20dp"
                    android:clickable="true"
            >
                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/profile_button"
                        android:background="@null"
                        android:scaleType="fitCenter"
                        android:layout_gravity="center"
                        android:padding="8dp"
                />
            </FrameLayout>
            <FrameLayout
                    android:id="@+id/personal_message_frame"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/map_button_2"
                    android:layout_marginEnd="20dp"
                    android:clickable="true"
            >
                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/messages_button"
                        android:background="@null"
                        android:scaleType="fitCenter"
                        android:layout_gravity="center"
                        android:padding="10dp"
                />
            </FrameLayout>
            <FrameLayout
                    android:id="@+id/geo_story_view_frame"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/map_button_2"
                    android:layout_marginEnd="20dp"
                    android:clickable="true"
                    android:visibility="gone"
            >
                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/eye"
                        android:background="@null"
                        android:scaleType="fitCenter"
                        android:layout_gravity="center"
                        android:padding="10dp"
                />
            </FrameLayout>

        </LinearLayout>
    </LinearLayout>
    <!-- Bottom Buttons overlay -->
    <LinearLayout
            android:id="@+id/buttonsOverlay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

        <!-- Button 1 -->
        <FrameLayout
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/map_button_1"
                android:layout_marginHorizontal="30dp"
                android:layout_marginVertical="16dp"
                android:id="@+id/profile_button_frame"
                android:clickable="true"
        >
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/profile_button"
                    android:contentDescription="@string/profile"
                    android:background="@null"
                    android:scaleType="fitCenter"
                    android:layout_gravity="center"
                    android:padding="8dp"
            />
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/new_request_icon"
                    android:src="@drawable/new_message_dot"
                    android:layout_gravity="end"
                    android:visibility="invisible"
            />
        </FrameLayout>
        <FrameLayout
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/map_button_1"
                android:layout_marginVertical="16dp"
                android:id="@+id/center_button_frame"
                android:clickable="true"
        >
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginVertical="16dp"
                    android:background="@null"
                    android:src="@drawable/geo_icon"
                    android:scaleType="fitCenter"
                    android:layout_gravity="center"
                    android:contentDescription="@string/centralize"
            />
        </FrameLayout>
        <FrameLayout
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:background="@drawable/map_button_1"
                android:layout_marginHorizontal="30dp"
                android:layout_marginVertical="16dp"
                android:id="@+id/messages_button_frame"
                android:clickable="true"
        >

            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/messages_button"
                    android:contentDescription="@string/message"
                    android:background="@null"
                    android:scaleType="fitCenter"
                    android:layout_gravity="center"
                    android:padding="12dp"
            />
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/unread_message_icon"
                    android:src="@drawable/new_message_dot"
                    android:layout_gravity="end"
                    android:visibility="invisible"
            />
        </FrameLayout>

    </LinearLayout>
    <!-- Messages Fragment Overlay -->
    <androidx.fragment.app.FragmentContainerView
            android:id="@+id/conversations_fragment"
            android:name="com.tagme.ConversationsFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toTopOf="@id/buttonsOverlay"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/topButtonsOverlay"
    />
    <!-- Geo Story Creation Fragment Overlay -->
    <androidx.fragment.app.FragmentContainerView
            android:id="@+id/geo_story_creation_fragment"
            android:name="com.tagme.GeoStoryCreationFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
    />
    <!-- Geo Story View Fragment Overlay -->
    <androidx.fragment.app.FragmentContainerView
            android:id="@+id/geo_story_view_fragment"
            android:name="com.tagme.GeoStoryViewFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
    />
    <!-- Profile Fragment Overlay -->
    <androidx.fragment.app.FragmentContainerView
            android:id="@+id/profile_fragment"
            android:name="com.tagme.ProfileFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toTopOf="@id/buttonsOverlay"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/topButtonsOverlay"
    />

</androidx.constraintlayout.widget.ConstraintLayout>