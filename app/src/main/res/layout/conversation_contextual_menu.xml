<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/conversation_rectangle"
              android:layout_marginHorizontal="15dp"
>
    <Space
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
    />
    <ImageView
            android:id="@+id/action_pin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/pin"
            android:layout_gravity="center"
            android:background="@drawable/map_button_1"
            android:padding="10dp"
    />

    <Space
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
    />
    <ImageView
            android:id="@+id/action_read"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/mark_chat_read"
            android:layout_gravity="center"
            android:background="@drawable/map_button_1"
            android:padding="10dp"
    />
    <Space
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
    />
    <ImageView
            android:id="@+id/action_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/trash_bin"
            android:layout_gravity="center"
            android:background="@drawable/map_button_1_red"
            android:padding="10dp"
    />
    <Space
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
    />
</LinearLayout>
