<FrameLayout
        android:id="@+id/profile_frame_layout"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
>
    <LinearLayout
            android:id="@+id/profile_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/background_for_user"
            android:orientation="vertical"
            android:clickable="true"
            android:focusable="true"
    >
    <com.tagme.CustomNestedScrollView
            android:id="@+id/profile_nested_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
        >
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
        >
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/user_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
            >
                <ImageButton
                        android:id="@+id/back_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/arrow_back_down"
                        android:paddingBottom="10dp"
                        android:paddingHorizontal="10dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/transparent"
                />
                <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/block"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="15dp"
                        android:layout_marginHorizontal="8dp"
                        android:background="@color/transparent"
                        android:id="@+id/block_button"
                        app:layout_constraintEnd_toEndOf="parent"
                />
                <TextView
                        android:id="@+id/tag_counter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="@string/tag_counter_format"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:fontFamily="@font/my_font"
                        android:textSize="30sp"
                        app:layout_constraintBottom_toTopOf="@id/user_picture"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                />
                <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/user_picture"
                        android:layout_width="180dp"
                        android:layout_height="180dp"
                        android:layout_marginTop="16dp"
                        android:src="@drawable/person_placeholder"
                        app:shapeAppearanceOverlay="@style/roundImageView"
                        app:strokeWidth="4dp"
                        android:padding="4dp"
                        app:strokeColor="@color/white"
                        app:layout_constraintTop_toBottomOf="@id/tag_counter"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:scaleType="centerCrop"
                />
                <TextView
                        android:id="@+id/user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="36sp"
                        android:layout_marginVertical="12dp"
                        android:fontFamily="@font/my_font"
                        android:textStyle="bold"
                        android:text="@string/nickname"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:layout_marginHorizontal="5dp"
                        android:layout_gravity="center_vertical"
                        app:layout_constraintTop_toBottomOf="@+id/user_picture"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>
                <TextView
                        android:id="@+id/rating_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="24sp"
                        android:text="@string/Rating"
                        android:textColor="@color/white"
                        android:fontFamily="@font/my_font"
                        android:layout_gravity="center_vertical"
                        app:layout_constraintTop_toBottomOf="@+id/user_name"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:visibility="gone"
                />
                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/separator_big"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginTop="10dp"
                        app:layout_constraintTop_toBottomOf="@+id/rating_text"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                />

                <TextView
                        android:id="@+id/relation_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="24sp"
                        android:layout_marginVertical="24dp"
                        android:text="@string/friends"
                        android:textColor="@color/green"
                        android:textStyle="bold"
                        android:fontFamily="@font/my_font"
                        android:layout_gravity="center_horizontal"
                        app:layout_constraintTop_toBottomOf="@+id/rating_text"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                />
            </androidx.constraintlayout.widget.ConstraintLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginTop="14dp">
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">
                    <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/separator_big"
                            android:layout_marginHorizontal="10dp"
                    />
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="66dp"
                            android:orientation="horizontal">
                        <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:textSize="24sp"
                                android:text="@string/add_friend"
                                android:textColor="@color/white"
                                android:fontFamily="@font/my_font"
                                android:layout_weight="1"
                                android:textStyle="bold"
                                android:layout_gravity="center"
                                android:layout_marginStart="14dp"
                        />
                        <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/arrow_right"
                                android:layout_marginEnd="25dp"
                        />
                    </LinearLayout>
                    <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/separator_big"
                            android:layout_marginHorizontal="10dp"
                    />
                </LinearLayout>
                <LinearLayout
                        android:id="@+id/friend_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:visibility="gone"
                >
                    <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:src="@drawable/separator_big"
                            android:layout_marginHorizontal="10dp"
                    />
                    <LinearLayout
                            android:id="@+id/conversation_layout"
                            android:layout_width="match_parent"
                            android:layout_height="66dp"
                            android:orientation="horizontal"
                            android:clickable="true"
                    >
                        <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:textSize="24sp"
                                android:text="@string/conversation"
                                android:textColor="@color/white"
                                android:fontFamily="@font/my_font"
                                android:layout_weight="1"
                                android:textStyle="bold"
                                android:layout_gravity="center"
                                android:layout_marginStart="14dp"
                        />
                        <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/messages_button"
                                android:layout_marginEnd="25dp"
                        />
                    </LinearLayout>
                    <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:src="@drawable/separator_big"
                            android:layout_marginHorizontal="10dp"
                    />
                    <LinearLayout
                            android:id="@+id/find_on_map_layout"
                            android:layout_width="match_parent"
                            android:layout_height="66dp"
                            android:orientation="horizontal"
                            android:clickable="true"
                    >
                        <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:textSize="24sp"
                                android:text="@string/find_on_map"
                                android:textColor="@color/white"
                                android:fontFamily="@font/my_font"
                                android:layout_weight="1"
                                android:textStyle="bold"
                                android:layout_gravity="center"
                                android:layout_marginStart="14dp"
                        />
                        <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/geo_icon"
                                android:layout_marginEnd="25dp"
                        />
                    </LinearLayout>
                    <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:src="@drawable/separator_big"
                            android:layout_marginHorizontal="10dp"
                    />
                    <LinearLayout
                            android:id="@+id/unfriend_layout"
                            android:layout_width="match_parent"
                            android:layout_height="66dp"
                            android:orientation="horizontal"
                            android:clickable="true"
                    >
                        <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:textSize="24sp"
                                android:text="@string/unfriend"
                                android:textColor="@color/white"
                                android:fontFamily="@font/my_font"
                                android:layout_weight="1"
                                android:textStyle="bold"
                                android:layout_gravity="center"
                                android:layout_marginStart="14dp"
                        />
                        <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/person_remove"
                                android:layout_marginEnd="25dp"
                        />
                    </LinearLayout>
                    <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:src="@drawable/separator_big"
                            android:layout_marginHorizontal="10dp"
                    />
                    <LinearLayout
                            android:id="@+id/block_layout"
                            android:layout_width="match_parent"
                            android:layout_height="66dp"
                            android:orientation="horizontal"
                            android:clickable="true"
                    >
                        <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:textSize="24sp"
                                android:text="@string/block"
                                android:textColor="@color/white"
                                android:fontFamily="@font/my_font"
                                android:layout_weight="1"
                                android:textStyle="bold"
                                android:layout_gravity="center"
                                android:layout_marginStart="14dp"
                        />
                        <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/block_fill0"
                                android:layout_marginEnd="25dp"
                        />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                        android:id="@+id/blocked_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone"
                >
                    <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/separator_big"
                            android:layout_marginHorizontal="10dp"
                    />
                    <TextView
                            android:id="@+id/unblock_layout"
                            android:layout_width="match_parent"
                            android:layout_height="66dp"
                            android:clickable="true"
                            android:textSize="24sp"
                            android:text="@string/unblock"
                            android:fontFamily="@font/my_font"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:gravity="center_vertical"
                            app:drawableEndCompat="@drawable/arrow_right"
                            android:drawablePadding="10dp"
                            android:paddingStart="14dp"
                            android:paddingEnd="25dp"
                    />
                </LinearLayout>
                <LinearLayout
                        android:id="@+id/not_related_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone"
                >
                    <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/separator_big"
                            android:layout_marginHorizontal="10dp"
                    />
                    <TextView
                            android:id="@+id/send_friend_request_layout"
                            android:layout_width="match_parent"
                            android:layout_height="66dp"
                            android:clickable="true"
                            android:textSize="24sp"
                            android:text="@string/send_friend_request"
                            android:textColor="@color/white"
                            android:fontFamily="@font/my_font"
                            android:textStyle="bold"
                            android:gravity="center_vertical"
                            app:drawableEndCompat="@drawable/arrow_right"
                            android:drawablePadding="10dp"
                            android:paddingStart="14dp"
                            android:paddingEnd="25dp"
                    />
                </LinearLayout>
                <LinearLayout
                        android:id="@+id/outgoing_friend_request_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone"
                >
                    <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/separator_big"
                            android:layout_marginHorizontal="10dp"
                    />
                    <TextView
                            android:id="@+id/cancel_friend_request_layout"
                            android:layout_width="match_parent"
                            android:layout_height="66dp"
                            android:clickable="true"
                            android:textSize="24sp"
                            android:text="@string/cancel_friend_request"
                            android:fontFamily="@font/my_font"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:gravity="center_vertical"
                            app:drawableEndCompat="@drawable/arrow_right"
                            android:drawablePadding="10dp"
                            android:paddingStart="14dp"
                            android:paddingEnd="25dp"
                    />
                </LinearLayout>
                <LinearLayout
                        android:id="@+id/incoming_friend_request_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone"
                >
                    <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/separator_big"
                            android:layout_marginHorizontal="10dp"
                    />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="visible"
                    >
                        <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:textSize="24sp"
                                android:text="@string/answer_friend_request"
                                android:fontFamily="@font/my_font"
                                android:textColor="@color/white"
                                android:layout_weight="1"
                                android:textStyle="bold"
                                android:layout_gravity="center"
                                android:layout_marginStart="14dp"
                        />
                        <ImageButton
                                android:id="@+id/accept_button"
                                android:layout_width="58dp"
                                android:layout_height="58dp"
                                android:padding="5dp"
                                android:src="@drawable/check_circle"
                                android:background="@null"
                                android:layout_gravity="end|center_vertical"
                                android:scaleType="fitCenter"
                                android:layout_marginEnd="5dp"
                        />
                        <ImageButton
                                android:id="@+id/deny_button"
                                android:layout_width="58dp"
                                android:layout_height="58dp"
                                android:padding="5dp"
                                android:src="@drawable/cancel_circle"
                                android:background="@null"
                                android:layout_gravity="end|center_vertical"
                                android:scaleType="fitCenter"
                                android:layout_marginEnd="10dp"
                        />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        </com.tagme.CustomNestedScrollView>
        <Space android:layout_width="wrap_content" android:layout_height="0dp" android:layout_weight="1"/>
        <TextView
                android:id="@+id/friends_since"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:text="@string/friends_since_format"
                android:fontFamily="@font/my_font"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginBottom="15dp"
                android:visibility="gone"
        />
    </LinearLayout>
        <View
                android:id="@+id/dark_overlay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#B3000000"
                android:visibility="gone"
        />

        <LinearLayout
                android:id="@+id/are_you_sure_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginHorizontal="30dp"
                android:background="@drawable/add_friend_background"
                android:layout_gravity="center"
                android:padding="15dp"
                android:clickable="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="vertical"
        >
            <TextView
                    android:id="@+id/are_you_sure_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/are_you_sure_logout"
                    android:textSize="30sp"
                    android:textAlignment="center"
                    android:textColor="#425890"
                    android:fontFamily="@font/my_font"
                    android:layout_gravity="center"
            />
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
            >
                <Button
                        android:id="@+id/no_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/no"
                        android:textSize="20sp"
                        android:background="@drawable/send_request_background"
                        android:fontFamily="@font/my_font"
                        android:paddingHorizontal="40dp"
                        android:paddingVertical="16dp"
                        android:textColor="@color/white"
                />
                <Space
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                />
                <Button
                        android:id="@+id/yes_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/yes"
                        android:textSize="20sp"
                        android:background="@drawable/send_request_background"
                        android:fontFamily="@font/my_font"
                        android:paddingHorizontal="40dp"
                        android:paddingVertical="16dp"
                        android:textColor="@color/white"
                />
            </LinearLayout>
        </LinearLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/progress_bar_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/background_for_user"
            android:visibility="visible"
    >
        <TextView
                android:id="@+id/loading_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="36sp"
                android:layout_marginBottom="20dp"
                android:textStyle="bold"
                android:text="@string/loading"
                android:fontFamily="@font/my_font"
                android:textColor="@color/white"
                app:layout_constraintBottom_toTopOf="@id/progress_bar"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintVertical_chainStyle="packed"
        />
        <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/loading_text"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:indeterminate="true"
                android:indeterminateTintMode="src_atop"
                android:indeterminateTint="@color/white"
        />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>