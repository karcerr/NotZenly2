<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
         xmlns:app="http://schemas.android.com/apk/res-auto"
         android:layout_width="match_parent"
         android:layout_height="match_parent">

<androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_cyan_grad">

    <LinearLayout
            android:id="@+id/main_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="5dp">
            <ImageButton
                    android:id="@+id/back_arrow_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/arrow_back"
                    android:background="@null"
                    android:layout_marginStart="10dp"
            />
            <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Tags: 222"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:fontFamily="@font/my_font"
                    android:textSize="30sp"
                    android:gravity="center"
            />

            <ImageButton
                    android:id="@+id/settings_button"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:src="@drawable/settings"
                    android:background="@null"
                    android:layout_gravity="end"
                    android:layout_marginEnd="10dp"
            />
        </LinearLayout>
        <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/profile_picture"
                android:layout_width="256dp"
                android:layout_height="256dp"
                android:src="@drawable/person_placeholder"
                app:shapeAppearanceOverlay="@style/roundImageView"
                app:strokeWidth="2dp"
                android:padding="1dp"
                app:strokeColor="@color/white"
                android:layout_margin="8dp"
                android:layout_gravity="center"
        />
        <TextView
                android:id="@+id/nickname_text"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Nickname"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textAppearance="?android:textAppearanceMedium"
                android:fontFamily="@font/my_font"
                android:textSize="35sp"
                android:layout_gravity="center"
        />
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/separator"
                android:layout_marginVertical="15dp"
                android:layout_gravity="center"
        />
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="15dp"
        >
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Рейтинг"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:fontFamily="@font/my_font"
                    android:textSize="30sp"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_gravity="center_vertical"
            />

            <ImageButton
                    android:id="@+id/show_rating_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/arrow_right"
                    android:textSize="20sp"
                    android:background="@color/transparent"
                    android:layout_marginEnd="5dp"
                    android:layout_gravity="center_vertical"
            />
        </LinearLayout>
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/separator"
                android:layout_marginVertical="15dp"
                android:layout_gravity="center"
        />
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="15dp"
                android:layout_marginBottom="5dp"
        >
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Друзья"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:fontFamily="@font/my_font"
                    android:textSize="30sp"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_gravity="center_vertical"
            />

            <ImageButton
                    android:id="@+id/add_friend_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/person_add_button"
                    android:textSize="20sp"
                    android:background="@color/transparent"
                    android:layout_marginEnd="5dp"
                    android:layout_gravity="center_vertical"
            />
        </LinearLayout>
        <!-- Scrollable List of Friends -->
        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/friends_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:fontFamily="@font/my_font"
        />
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/separator"
                android:layout_marginVertical="15dp"
                android:layout_gravity="center"
        />
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="15dp"
                android:layout_marginBottom="5dp">
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Заявки в друзья"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:fontFamily="@font/my_font"
                    android:textSize="30sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_weight="1"
            />
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/friend_requests_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:fontFamily="@font/my_font"
        />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
<View
        android:id="@+id/dark_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#B3000000"
        android:visibility="gone"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/add_friend_window"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:backgroundTint="#559D2EFF"
        android:background="@drawable/rounded_corner"
        android:layout_gravity="center"
        android:padding="15dp"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
    >
    <EditText
            android:id="@+id/nickname_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Nickname"
            android:textColorHint="@color/grey"
            android:textSize="20sp"
            android:background="@drawable/rounded_corner"
            android:fontFamily="@font/my_font"
            android:padding="16dp"
            android:layout_marginBottom="6dp"
            android:textColor="@color/white"
            app:layout_constraintTop_toTopOf="parent"
            android:inputType="text"
    />
    <TextView
            android:id="@+id/status_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:textColor="@color/white"
            android:textSize="23sp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:fontFamily="@font/my_font"
            app:layout_constraintTop_toBottomOf="@id/nickname_edit_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
    />
    <Button
            android:id="@+id/send_request_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send Request"
            android:textSize="20sp"
            android:background="@drawable/rounded_corner"
            android:backgroundTint="@color/purple_500"
            android:fontFamily="@font/my_font"
            android:layout_marginTop="6dp"
            android:padding="8dp"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@id/status_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
    />
</androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
