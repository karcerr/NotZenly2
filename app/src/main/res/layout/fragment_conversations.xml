<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@drawable/background_for_user"
>
    <RelativeLayout
            android:id="@+id/relative_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
    >

        <LinearLayout
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:layout_alignParentTop="true"
        >
            <ImageButton
                    android:id="@+id/back_arrow_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/arrow_back"
                    android:background="@null"
                    android:contentDescription="@string/go_back_button"
            />
            <TextView
                    android:id="@+id/conversations_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/conversations"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:fontFamily="@font/my_font"
                    android:textSize="35sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:gravity="center"
            />
            <Space
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
            />
        </LinearLayout>

        <com.tagme.CustomNestedScrollView
                android:id="@+id/nested_scroll_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/header"
                android:focusable="true"
                android:clickable="true"
        >
            <LinearLayout
                    android:id="@+id/main_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
            >
                <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/conversations_recycler_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:fontFamily="@font/my_font"
                />
            </LinearLayout>
        </com.tagme.CustomNestedScrollView>
        <View
                android:id="@+id/dark_overlay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#A0000000"
                android:alpha="0"
        />
    </RelativeLayout>
    <LinearLayout
            android:id="@+id/are_you_sure_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginHorizontal="30dp"
            android:background="@drawable/add_friend_background"
            android:padding="15dp"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical"
            android:layout_gravity="center"
    >
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/are_you_sure_delete_conversation"
                android:textSize="25sp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/reddish"
                android:fontFamily="@font/my_font"
                android:layout_gravity="center"
        />
        <TextView
                android:id="@+id/are_you_sure_text_format"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/are_you_sure_delete_conversation_format"
                android:textSize="15sp"
                android:textAlignment="center"
                android:textColor="#425890"
                android:fontFamily="@font/my_font"
                android:layout_gravity="center"
        />
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginHorizontal="5dp"
        >
            <Button
                    android:id="@+id/no_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/no"
                    android:textSize="20sp"
                    android:background="@drawable/send_request_background"
                    android:fontFamily="@font/my_font"
                    android:paddingHorizontal="50dp"
                    android:paddingVertical="16dp"
                    android:textColor="@color/white"
            />
            <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
            />
            <Button
                    android:id="@+id/yes_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/yes"
                    android:textSize="20sp"
                    android:background="@drawable/clear_cache_background"
                    android:fontFamily="@font/my_font"
                    android:paddingHorizontal="50dp"
                    android:paddingVertical="16dp"
                    android:textColor="@color/white"
            />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
