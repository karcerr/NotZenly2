<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/conversation_rectangle"
        android:id="@+id/conversation_layout"
        android:orientation="horizontal"
        android:layout_margin="5dp"
>
    <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/conversation_picture"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/person_placeholder"
            app:shapeAppearanceOverlay="@style/roundImageView"
            app:strokeWidth="2dp"
            android:padding="1dp"
            app:strokeColor="@color/white"
            android:layout_margin="8dp"
            android:scaleType="centerCrop"
    />
    <LinearLayout
            android:id="@+id/main_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <TextView
                android:id="@+id/conversation_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textStyle="bold"
                android:paddingTop="6dp"
                android:text="@string/nickname_text_placeholder"
                android:textColor="@color/black"
                android:fontFamily="@font/my_font"
                android:layout_gravity="center_vertical"
                android:shadowColor="#000000"
                android:shadowRadius=".5"
        />
        <TextView
                android:id="@+id/last_message_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textStyle="bold"
                android:paddingTop="6dp"
                android:text="@string/last_message_placeholder"
                android:fontFamily="@font/my_font"
                android:textColor="@color/black"
                android:layout_gravity="center_vertical"
        />

    </LinearLayout>
    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
    >
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/read_icon"
                android:src="@drawable/new_message_dot"
                android:layout_marginTop="7dp"
                android:layout_marginEnd="7dp"
                android:layout_gravity="end"
                android:visibility="invisible"
        />
        <Space android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1"/>
        <TextView
                android:id="@+id/last_message_timestamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textStyle="bold"
                android:text="@string/timestamp"
                android:textColor="@color/black"
                android:fontFamily="@font/my_font"
                android:layout_gravity="end"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="10dp"
                android:visibility="invisible"
        />
    </LinearLayout>
</LinearLayout>
