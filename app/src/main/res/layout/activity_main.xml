<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <TextView
            android:id="@+id/tvPermissionInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please grant permissions and enable location"
            android:layout_centerInParent="true"/>

    <Button
            android:id="@+id/btnGrantPermissionsAndEnableLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Grant Permissions and Enable Location"
            android:layout_below="@id/tvPermissionInfo"
            android:layout_centerHorizontal="true"/>

</RelativeLayout>
